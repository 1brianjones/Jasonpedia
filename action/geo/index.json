{
  "$jason": {
    "head": {
      "title": "$geo",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "$pull": {
          "type": "$flush",
          "success": {
            "type": "$reload"
          }
        }
      },
      "styles": {
        "labels": {
          "size": "20",
          "padding": "50",
          "font": "HelveticaNeue-Bold",
          "align": "center"
        }
      },
      "templates": {
        "map": {
          "sections": [{
            "items": [{
              "type": "map",
              "region": {
                "coord": "{{$jason.coord}}",
                "width": "100",
                "height": "100"
              },
              "style": {
                "height": "400"
              }
            }, {
              "type": "label",
              "text": "Display current location",
              "class": "labels",
              "action": {
                "type": "$geo.get",
                "success": {
                  "type": "$render",
                  "options": {
                    "template": "coord"
                  }
                }
              }
            }]
          }]
        },
        "coord": {
          "sections": [{
            "items": [{
              "type": "label",
              "class": "labels",
              "text": "{{$jason.coord}}"
            }, {
              "type": "label",
              "text": "Map current location",
              "class": "labels",
              "action": {
                "type": "$geo.get",
                "success": {
                  "type": "$render",
                  "options": {
                    "template": "map"
                  }
                }
              }
            }]
          }]
        },
        "body": {
          "sections": [{
            "items": [{
              "type": "label",
              "text": "Display current location",
              "class": "labels",
              "action": {
                "type": "$geo.get",
                "success": {
                  "type": "$render",
                  "options": {
                    "template": "coord"
                  }
                }
              }
            }, {
              "type": "label",
              "text": "Map current location",
              "class": "labels",
              "action": {
                "type": "$geo.get",
                "success": {
                  "type": "$render",
                  "options": {
                    "template": "map"
                  }
                }
              }
            }]
          }]
        }
      }
    }
  }
}
