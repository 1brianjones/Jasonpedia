{
  "$jason": {
    "head": {
      "title": "$network",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "padding": "10",
          "size": "15"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "actions": {
        "$foreground": {
          "type": "$reload"
        }
      }
    },
    "body": {
      "header": {
        "menu": {
          "text": "View JSON",
          "href": {
            "url": "https://github.com/Jasonette/Jasonpedia/blob/master/action/network/index.json",
            "view": "web"
          }
        }
      },
      "sections": [
        {
          "items": [
            {
              "type": "vertical",
              "components": [{
                "type": "label",
                "class": "bold",
                "text": "upload example",
                "href": {
                  "url": "https://imagejason.herokuapp.com"
                }
              }, {
                "type": "label",
                "class": "normal",
                "text": "takes photo using $media.camera, and uploads it to imagejason.herokuapp.com via $network.upload"
              }]
            }
          ]
        }
      ]
    }
  }
}
