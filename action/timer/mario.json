{
  "$jason": {
    "head": {
      "title": "Mario",
      "actions": {
        "$load": {
          "type": "$set",
          "options": {
            "index": "0",
            "frame": "0"
          },
          "success": {
            "type": "$timer.start",
            "options": {
              "interval": "0.1",
              "name": "mario",
              "repeats": "true",
              "action": {
                "trigger": "tick"
              }
            }
          }
        },
        "tick": {
          "type": "$set",
          "options": {
            "index": "{{'' + ((parseInt($get.index) + 1)%2)}}",
            "frame": "{{'' + ((parseInt($get.frame) + 5)%500)}}"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "#000000",
            "color": "#ffffff"
          },
          "header": {
            "style": {
              "background": "#000000",
              "color": "#ffffff"
            }
          },
          "layers": [{
            "type": "label",
            "text": "https://jasonette.github.io/Jasonpedia/assets/{{$get.index}}.png",
            "style": {
              "top": "40%",
              "left": "10",
              "color": "#ffffff",
              "align": "center"
            }
          }, {
            "type": "image",
            "url": "https://jasonette.github.io/Jasonpedia/assets/{{$get.index}}.png",
            "style": {
              "top": "50%",
              "left": "{{$get.frame}}",
              "height": "50"
            }
          }]
        }
      }
    }
  }
}
