{
  "$jason": {
    "head": {
      "title": "Mario",
      "actions": {
        "$load": {
          "type": "$set",
          "options": {
            "index": "0",
            "frame": "0"
          },
          "success": {
            "type": "$timer.start",
            "options": {
              "interval": "0.1",
              "name": "mario",
              "repeats": "true",
              "action": {
                "trigger": "tick"
              }
            }
          }
        },
        "tick": {
          "type": "$set",
          "options": {
            "index": "{{'' + ((parseInt($get.index) + 1)%2)}}",
            "frame": "{{'' + ((parseInt($get.frame) + 5)%500)}}"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "#000000",
            "color": "#ffffff",
            "border": "none"
          },
          "header": {
            "style": {
              "background": "#000000",
              "color": "#ffffff"
            }
          },
          "sections": [{
            "items": [{
              "type": "vertical",
              "components": [{
                "type": "label",
                "text": "FRAME: https://jasonette.github.io/Jasonpedia/assets/{{$get.index}}.png",
                "style": {
                  "font": "Courier",
                  "size": "12",
                  "color": "#ebebeb"
                }
              }, {
                "type": "label",
                "text": "COORD: {{$get.frame}}",
                "style": {
                  "font": "Courier",
                  "size": "12",
                  "color": "#ebebeb"
                }
              }]
            }]
          }],
          "layers": [{
            "type": "image",
            "url": "https://jasonette.github.io/Jasonpedia/assets/{{$get.index}}.png",
            "style": {
              "top": "50%",
              "left": "{{$get.frame}}",
              "height": "50"
            }
          }]
        }
      }
    }
  }
}
